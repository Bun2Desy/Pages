<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Hack me</title>
        <link rel="stylesheet" href="/page_creator.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <form action="/api/logout", method="GET">
            <div class="col-md-3 text-end">
              <button type="submit" class="btn btn-primary">Log out</button>
            </div>
        </form>
        <div class="boba">
            <h1 class="h1 mb-3 fw-normal">Hello, <%= name %>!</h1>
            <ul>
                <% for(var i = 0; i < pages.length; i++){ %>
                    <li> <a href="/page?name=<%= pages[i] %>"><%= pages[i] %></a> </li>
                <% } %>
            </ul>
            <form class="form-page" action="/load_page" method="POST">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Page name</label>
                    <input type="text" class="form-control" name="page_name" placeholder="Enter page name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Body</label>
                    <textarea class="form-control" name="page" rows="3"></textarea>
                </div>
                <button type="submit" value="Submit">Load</button>
            </form>
        </div>
    </body>
</html>